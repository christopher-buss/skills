{
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/lint-guard.mjs"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/lint.mjs"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/lint-stop.mjs"
					}
				]
			}
		],
		"SessionStart": [
			{
				"matcher": "startup|resume|clear|compact",
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/dist/hooks/clear-lint-state.mjs"
					}
				]
			}
		]
	}
}
